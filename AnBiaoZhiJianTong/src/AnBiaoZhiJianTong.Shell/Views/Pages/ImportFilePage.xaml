<Page x:Class="AnBiaoZhiJianTong.Shell.Views.Pages.ImportFilePage"
      x:Name="ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnBiaoZhiJianTong.Shell.Views.Pages"
      xmlns:hc="https://handyorg.github.io/handycontrol" 
      xmlns:local1="clr-namespace:CefSharp.DevTools.PWA;assembly=CefSharp.Core"
      xmlns:prism="http://prismlibrary.com/"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:conv ="clr-namespace:AnBiaoZhiJianTong.Shell.ShellUtilities.Converters" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="ImportFilePage"
      prism:ViewModelLocator.AutoWireViewModel="True">
    <Page.Resources>
        <!-- 卡片按钮样式（ToggleButton） -->
        <Style x:Key="CardSelectButtonStyle" TargetType="ToggleButton"
          xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <Setter Property="Width" Value="210"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource Card_Border_Normal}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                           CornerRadius="12"
                           Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="34"/>
                                </Grid.RowDefinitions>

                                <!-- 顶部内容区 -->
                                <Grid Margin="8,8,8,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="36"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 图标：绑定 VM 的 IconSource（可为空） -->
                                    <Border Width="36" Height="36" CornerRadius="8"
                                       Background="AliceBlue"  
                                       VerticalAlignment="Top">
                                        <Image Source="{StaticResource TenderIcon}"
                                          Stretch="Uniform"
                                          Margin="6"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <!-- 标题 -->
                                        <TextBlock Text="{Binding Name}"
                                              Style="{StaticResource TextBlockBaseStyle}"
                                              FontSize="15"
                                              FontWeight="SemiBold"
                                              TextTrimming="CharacterEllipsis"
                                              TextWrapping="Wrap"   
                                              VerticalAlignment="Top"      
                                              />
                                    </StackPanel>
                                </Grid>

                                <!-- 底栏 -->
                                <Border x:Name="BottomBar"
                                   Grid.Row="1"
                                   Background="{StaticResource Card_Bottom_Normal}"
                                   CornerRadius="0,0,12,12">
                                    <Grid Margin="10,0,10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 左：对勾 + “选择” -->
                                        <CheckBox IsChecked="{Binding IsSelected}" Content="选择"
                                                  Foreground="DodgerBlue"
                                                  FontSize="13"
                                                  VerticalAlignment="Center">
                                            <CheckBox.Template>
                                                <ControlTemplate TargetType="CheckBox">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Border Width="18" Height="18" CornerRadius="9"
                                                                BorderBrush="DodgerBlue" BorderThickness="1"
                                                                Background="#FFFFFFFF">
                                                            <Path x:Name="CheckMark"
                                                                Data="M0,5 L3,9 L10,0"  
                                                                Stroke="DodgerBlue"
                                                                StrokeThickness="2"
                                                                Visibility="Collapsed"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"/>
                                                        </Border>
                                                        <TextBlock Text="选择"
                                                                VerticalAlignment="Center"
                                                                Foreground="DodgerBlue"
                                                                FontSize="13"/>
                                                    </StackPanel>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </CheckBox.Template>
                                        </CheckBox>

                                        <!-- 右：三点（左键有菜单） -->
                                        <Border Grid.Column="1" Width="22" Height="22" CornerRadius="11"
                                           HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Background="Transparent" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                                            <TextBlock Text="{StaticResource Glyph_More}"
                                                  FontFamily="{StaticResource IconFont}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Foreground="DodgerBlue" FontSize="12"/>
                                            <!-- 左键菜单 -->
                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="查看"  Command="{Binding DataContext.ViewCommand, ElementName=ImportPage}"
                                                                             CommandParameter="{Binding PlacementTarget.DataContext,
                                                                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                    <MenuItem Header="删除"  Command="{Binding DataContext.DeleteCommand, ElementName=ImportPage}"
                                                                             CommandParameter="{Binding PlacementTarget.DataContext,
                                                                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                    <MenuItem Header="重命名"  Command="{Binding DataContext.RenameCommand, ElementName=ImportPage}"
                                                                             CommandParameter="{Binding PlacementTarget.DataContext,
                                                                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- 选中/按下 触发器 -->
                        <ControlTemplate.Triggers>
                            <!-- 按下轻微压暗 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.92"/>
                            </Trigger>

                            <!-- 选中：变蓝 -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Card_Border_Selected}"/>
                                <!-- 底栏蓝系 -->
                                <Setter TargetName="BottomBar" Property="Background"
                                   Value="{StaticResource Card_Bottom_Selected}"/>
                                <!-- 底栏内容变蓝系 -->
                                <Setter TargetName="BottomBar" Property="TextElement.Foreground" Value="#FF2D6BF3"/>
                                <!-- 图标底色也可随选中变化（可选） -->
                                <!--<Setter TargetName="IconBg" Property="Background" Value="#142D6BF3"/>-->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBlockDefaultTin" BasedOn="{StaticResource TextBlockDefaultThiLight}" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SimHei"/>
        </Style>

        <Style x:Key="TextBlockDefaultNomal" BasedOn="{StaticResource TextBlockSubTitle}" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SimHei"/>
        </Style>
        <conv:IsSelectedConverter x:Key="IsSelectedConverter"/>
        <Style x:Key="NavButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimary}">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#76C2F0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource IsSelectedConverter}">
                            <Binding Path="SelectedButton"/>
                            <Binding RelativeSource="{RelativeSource Self}" Path="Name"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="#2196F3"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- 文档卡片外观 -->
        <Style x:Key="DocCardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="#FFFDFDFE"/>
            <Setter Property="BorderBrush" Value="#FFEFE5F2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <!-- 悬停高亮 -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF2D6BF3"/>
                    <Setter Property="Background" Value="AliceBlue"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 悬停出现的删除按钮：默认隐藏，父容器 IsMouseOver=True 时显示 -->
        <Style x:Key="HoverActionButton" TargetType="Button">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="MinWidth" Value="56"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=IsMouseOver}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <DataTemplate  x:Key="RuleSelectedTemplate">
            
        </DataTemplate>
        <DataTemplate  x:Key="EmptyTemplate">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="{StaticResource ImportFileIcon}" Width="45" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="请选择检测文件" FontSize="16" Margin="0,0,0,10"  VerticalAlignment="Center" Style="{StaticResource TextBlockDefaultTin}"/>
                <TextBlock Text="支持格式 docx.doc." FontSize="16" Margin="0,0,0,10"  VerticalAlignment="Center" Style="{StaticResource TextBlockDefaultTin}"/>
                <Button x:Name="SelectFileButton" Style="{StaticResource ButtonPrimary}" Command="{Binding ImportFileCommand}" Foreground="White" FontSize="15" Content="选择文件" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate  x:Key="FileSelectedTemplate">
            <Border Style="{StaticResource DocCardBorder}" Width="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 顶部：Word 图标 + 复选框 + 悬停按钮 -->
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="32" Height="32" Stretch="Uniform"
                                Margin="0,0,6,0"
                                Grid.Column="0"
                                Grid.Row="0"
                                Source="{StaticResource WordIcon}"/>

                        <CheckBox Content="首页为封面"
                                  Grid.Row="0"
                                  Grid.Column="2"
                                  HorizontalAlignment="Right"
                                  IsChecked="{Binding IsCoverFirstPage, Mode=TwoWay}"/>

                        <Image Source="{StaticResource DeleteIcon}" 
                                       Width="30" 
                                       Height="30"
                                       Grid.Column="1"
                                       Grid.Row="0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding DeleteFileCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Image>
                    </Grid>

                    <!-- 文件名 -->
                    <TextBlock Grid.Row="2"
                                Text="{Binding FileName}"
                                FontFamily="SimHei"
                                FontSize="16"
                                TextAlignment="Center"
                                TextWrapping="Wrap"
                                Margin="0,6,0,0"
                               />
                </Grid>
            </Border>
        </DataTemplate>

        <local:DisplayModeTemplateSelector x:Key="ModeTemplateSelector"
                                            EmptyTemplate="{StaticResource EmptyTemplate}"
                                            FileSelectedTemplate="{StaticResource FileSelectedTemplate}"/>
    </Page.Resources>

    <Border Style="{StaticResource BorderRegion}" Margin="0,0,0,-13" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- 主内容区域 -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 设置格式要求 -->
                <Grid Grid.Row="0" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="设置格式要求" FontSize="18" FontWeight="SemiBold" Foreground="DodgerBlue" Margin="10,10,0,0"/>
                    <Border Grid.Row="1" Margin="10" CornerRadius="12">
                        <Grid  Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Style="{StaticResource BorderRegion}" Background="AliceBlue" CornerRadius="12">
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="GetFromTenderDoc" Style="{StaticResource NavButtonSelectedStyle}" Command="{Binding ImportTenderCommand}"  BorderThickness="2" Height="90" Width="250" HorizontalAlignment="Left" Margin="10" Grid.Row="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{StaticResource ImportTenderIcon}" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="导入规则文件" VerticalAlignment="Center" Foreground="White" FontSize="20" Margin="10,0,0,0" Grid.Column="1" Style="{StaticResource TextBlockDefaultNomal}" />
                                        </Grid>
                                    </Button>
                                    <Button x:Name="ManualFormat" Style="{StaticResource NavButtonSelectedStyle}"  BorderThickness="2" Height="90" Width="250" HorizontalAlignment="Left" Margin="10" Grid.Row="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{StaticResource ExchangeIcon}" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="手动设置格式" VerticalAlignment="Center" Foreground="White" FontSize="20" Margin="10,0,0,0" Grid.Column="1" Style="{StaticResource TextBlockDefaultNomal}" />
                                        </Grid>
                                    </Button>
                                </Grid>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderRegion}" Background="AliceBlue" CornerRadius="12"  Height="250">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" hc:ScrollViewerAttach.AutoHide="False">
                                    <ScrollViewer.Resources>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.ScrollBarBrushKey}" Color="{StaticResource PrimaryColor}"/>
                                    </ScrollViewer.Resources>
                                    <ItemsControl ItemsSource="{Binding Templates}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel ItemWidth="210" ItemHeight="150" Margin="8"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ToggleButton Style="{StaticResource CardSelectButtonStyle}"
                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
                <hc:Divider LineStrokeThickness="2" LineStroke="{DynamicResource DarkPrimaryBrush}" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,0"/>
                <!-- 导入检测文件 -->
                <Grid Grid.Row="2" Grid.ColumnSpan="2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="导入检测文件" FontSize="18" FontWeight="SemiBold" Foreground="DodgerBlue" Margin="10,10,0,10" HorizontalAlignment="Left" Grid.Row="0"/>
                    <Border Style="{StaticResource BorderRegion}" Margin="20,0,20,0" Background="AliceBlue" Grid.RowSpan="4"  CornerRadius="12" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="151*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentControl Content="{Binding}" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="0,0,0,-10">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="ContentTemplate" Value="{StaticResource EmptyTemplate}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFileImported}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource FileSelectedTemplate}"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <Setter Property="VerticalAlignment" Value="Top"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </Grid>
                    </Border>
                    <hc:Divider Grid.Row="2" Grid.ColumnSpan="2" Margin="10,5,10,5"  LineStroke="{DynamicResource LightPrimaryBrush}"/>
                </Grid>
                <Grid Grid.Row="3" Margin="10,10,10,10" Grid.ColumnSpan="2">
                    <Button x:Name="ImportButton" Style="{StaticResource ButtonPrimary}" Foreground="White" FontSize="16" Content="下一步" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>

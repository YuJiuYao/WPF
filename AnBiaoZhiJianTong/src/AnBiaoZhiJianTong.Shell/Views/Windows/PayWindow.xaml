<Window x:Class="AnBiaoZhiJianTong.Shell.Views.Windows.PayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnBiaoZhiJianTong.Shell.Views.Windows"
        xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:viewModels="clr-namespace:AnBiaoZhiJianTong.Shell.ViewModels.Pages"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        WindowStyle="None"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="支付窗口" Height="700" Width="1000">
    <Border CornerRadius="6" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"  Grid.ColumnSpan="2"
                Height="32" 
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                        <!-- 应用图标 -->
                        <!--<Border Width="20" Height="20" CornerRadius="3" Background="#3498DB" Margin="0,0,6,0">
                            <TextBlock Text="暗" FontSize="12" FontWeight="Bold" Foreground="White" 
            HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>-->
                        <TextBlock FontSize="13" 
                            FontWeight="Normal" 
                            VerticalAlignment="Center"
                            Foreground="White">
                             <Run Text="支付"/>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="3" 
            Orientation="Horizontal" 
            VerticalAlignment="Center">
                        <Button x:Name="CloseButton"
                Width="30" Height="32"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                ToolTip="关闭"
                Click="CloseButton_Click">
                            <Path Data="M0,0 L8,8 M8,0 L0,8" 
                      Stroke="White" 
                      StrokeThickness="1"
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- WebView2 控件  -->
            <!-- wv2:WebView2 x:Name="webView" Grid.Row="1" Source="{Binding PayUrl}"/ -->
            <cef:ChromiumWebBrowser x:Name="chromiumBrowser" HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch" Grid.Row="1"  Address="{Binding PayUrl}"/>

        </Grid>
    </Border>
</Window>
<Window x:Class="AnBiaoZhiJianTong.Shell.Views.Windows.ShowChangeName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnBiaoZhiJianTong.Shell.Views.Windows"
        mc:Ignorable="d"
        Title="ShowChangeName" Height="200" Width="360">
    <Border CornerRadius="6" BorderBrush="#DDD" BorderThickness="1" Background="White">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock Text="保存" Style="{StaticResource TextBlockSubTitleBold}" HorizontalAlignment="Left" Margin="5"/>

            <!-- 输入区 -->
            <StackPanel Grid.Row="1" Margin="5,20,5,20">
                <TextBlock Text="请输入方案名称" Margin="0,0,0,8" Style="{StaticResource TextBlockDefaultPrimary}" HorizontalAlignment="Left"/>
                <TextBox x:Name="NameBox"
                         Height="28"
                         FontSize="14"
                         Padding="4"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>
            </StackPanel>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="保存"
                        Width="80" Height="32"
                        Style="{StaticResource ButtonPrimary}"
                        Click="Save_Click"/>
                <Button Content="不保存"
                        Width="80" Height="32"
                        Style="{StaticResource ButtonDashedPrimary}"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

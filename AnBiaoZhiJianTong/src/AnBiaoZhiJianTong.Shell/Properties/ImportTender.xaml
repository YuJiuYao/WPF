<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- 颜色方案 -->
    <SolidColorBrush x:Key="Card_Border_Normal" Color="AliceBlue"/>
    <!-- 红边 -->
    <SolidColorBrush x:Key="Card_Border_Selected" Color="#FF2D6BF3"/>
    <!-- 蓝边 -->

    <SolidColorBrush x:Key="Card_Bottom_Normal" Color="#CEE1F9"/>
    <SolidColorBrush x:Key="Card_Bottom_Selected" Color="#CEE1F9"/>
    <!-- 底栏淡蓝(8~15%透明) -->

    <SolidColorBrush x:Key="Card_Text_Primary" Color="#FF222222"/>
    <SolidColorBrush x:Key="Card_Text_Secondary" Color="#FF7A7A7A"/>

    <!-- 三点/对勾使用系统图标字体 -->
    <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>
    <sys:String x:Key="Glyph_Check">&#xE73E;</sys:String>
    <!-- Accept -->
    <sys:String x:Key="Glyph_More">&#xE712;</sys:String>
</ResourceDictionary>
